@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-login-register my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-login-register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-label-group">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required autofocus>
                            <label asp-for="Email">Email address</label>
                        </div>
                        <div class="form-label-group">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                            <label asp-for="Password">Password</label>
                        </div>
                        <div class="custom-control custom-checkbox mb-3">
                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                            <label asp-for="RememberMe" class="custom-control-label">Remember password</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-google btn-block text-uppercase"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>
                    </form>
                    <div class="sign-up">
                        Don't have an account yet?
                        <a asp-controller="User" asp-action="Register">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
